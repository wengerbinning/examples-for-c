config globals 'globals'
	option ula_prefix 'auto'

config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'wan0'
	option device 'eth4'
	option proto 'dhcp'
	option reqopts '43 66'
	option peerdns '1'
	option metric '256'

config device 'lan'
	option name 'br-lan'
	option type 'bridge'
	option stp '1'
	list ports 'eth0'
	list ports 'eth1'
	list ports 'eth2'
	list ports 'eth3'

config interface 'zone0'
	option device 'br-lan'
	option proto 'static'
	list ipaddr '192.168.80.1'
	option netmask '255.255.255.0'
